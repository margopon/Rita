<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="10dp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="233dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/margo_1"
                android:shadowColor="#B39DDB"
                android:text="AC"
                android:textColor="#FFAB91"
                android:textColorHighlight="#90CAF9"
                android:textColorHint="#90CAF9"
                android:textColorLink="#90CAF9"
                android:textSize="60sp"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="7"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="4"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="1"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="."
                android:textColor="#FFEE58"
                android:textSize="50sp"
                android:visibility="visible"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/margo_1"
                android:text="("
                android:textColor="#66BB6A"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="8"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="5"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="2"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="0"
                android:visibility="visible"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/margo_1"
                android:text=")"
                android:textColor="#66BB6A"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="9"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="6"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="3"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo"
                android:text="back"
                android:textColor="#80DEEA"
                android:textSize="40sp"
                android:visibility="visible"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/margo_1"
                android:text="+"
                android:textColor="#9FA8DA"
                android:textSize="36sp"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo_1"
                android:text="-"
                android:textColor="#9FA8DA"
                android:textSize="36sp"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo_1"
                android:text="x"
                android:textColor="#9FA8DA"
                android:textSize="36sp"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo_1"
                android:text="/"
                android:textColor="#9FA8DA"
                android:textSize="36sp"
                android:visibility="visible"></TextView>

            <TextView
                style="@style/margo_1"
                android:fontFamily="@font/creepster"
                android:text="="
                android:textColor="#AB47BC"
                android:textSize="60sp"
                android:visibility="visible"
                app:drawableTint="#E62626"></TextView>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>